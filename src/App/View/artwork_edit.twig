{% extends 'base_admin.twig' %}

{% block title %}
    Edit Artwork
{% endblock %}

{% block content %}
    <div class="container container-edit mt-5 pl-5 pr-5">
        <h1 class="mt-5 pt-5 ml-3 mb-3">Edytuj „{{ artwork.title }}”</h1>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
        {% endif %}

        <form action="artwork_edit.php" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{ artwork.id }}">
            <div class="form-group">
                <label for="title">Tytuł:</label>
                <input type="text" class="form-control" name="title" id="title" value="{{ artwork.title ?? '' }}" required>
            </div>

            <div class="form-group">
                <label for="artistId">Twórca:</label>
                <select class="form-control" name="artistId" id="artistId" required>
                    {% for artist in artists %}
                        <option value="{{ artist.id }}" {% if artist.id == artwork.artistId %} selected {% endif %}>{{ artist.first_name }} {{ artist.last_name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="genreId">Kategoria:</label>
                <select class="form-control" name="genreId" id="genreId" required>
                    {% for genre in genres %}
                        <option value="{{ genre.id }}" {% if genre.id == artwork.genreId %} selected {% endif %}>{{ genre.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="creationYear">Rok utworzenia:</label>
                <input type="number" class="form-control" name="creationYear" id="creationYear" min="0" value="{{ artwork.creationYear ?? '' }}">
            </div>

            <div class="form-group">
                <label for="dimensions">Wymiary (wysokość × szerokość w cm):</label>
                <input type="text" class="form-control" name="dimensions" id="dimensions" value="{{ artwork.dimensions ?? '' }}" required>
            </div>

            <div class="form-group">
                <label for="medium">Medium:</label>
                <input type="text" class="form-control" name="medium" id="medium" value="{{ artwork.medium ?? '' }}" required>
            </div>

            <div class="form-group">
                <label for="altText">Tekst alternatywny:</label>
                <textarea id="altText" name="altText" class="form-control" required>{{ artwork.altText ?? '' }}</textarea>
            </div>

            {% if artwork.imagePath %}
                <div class="form-group">
                    <label for="currentImage">Aktualne Zdjęcie:</label><br>
                    <img id="currentImage" src="{{ artwork.imagePath }}" alt="Current Image" class="img-thumbnail mb-0" style="max-width: 300px;">
                </div>
            {% endif %}

            <div class="form-group mb-3">
                <label for="image" class="form-label">Zdjęcie:</label><br>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="image" name="image" onchange="previewImage(event)" accept="image/*">
                        <label class="custom-file-label" for="image">Wybierz zdjęcie</label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
        </form>
    </div>

    <script>
        function previewImage(event) {
            const currentImage = document.getElementById('currentImage');
            currentImage.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
{% endblock %}
