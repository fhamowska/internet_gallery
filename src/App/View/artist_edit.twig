{% extends 'base_admin.twig' %}

{% block title %}
    Edytuj artystę
{% endblock %}

{% block content %}
    <div class="container container-edit mt-5 pl-5 pr-5">
        <h1 class="mb-4 mt-4 pt-5 ml-3 pl-4">Edytuj artystę</h1>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
        {% endif %}

        <form action="artist_edit.php" method="post">
            <input type="hidden" name="id" value="{{ artist.id }}">
            <div class="form-group">
                <label for="first_name">Imię:</label>
                <input type="text" class="form-control" name="first_name" id="first_name" value="{{ artist.first_name }}" required>
            </div>

            <div class="form-group">
                <label for="last_name">Nazwisko:</label>
                <input type="text" class="form-control" name="last_name" id="last_name" value="{{ artist.last_name }}" required>
            </div>

            <div class="form-group">
                <label for="year_of_birth">Rok urodzenia:</label>
                <input type="number" class="form-control" name="year_of_birth" id="year_of_birth" value="{{ artist.year_of_birth }}" required>
            </div>

            <div class="form-group">
                <label for="year_of_death">Rok śmierci:</label>
                <input type="number" class="form-control" name="year_of_death" id="year_of_death" {% if artist.year_of_death != 0 %} value="{{ artist.year_of_death }}" {% endif %}>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
        </form>
    </div>
{% endblock %}
