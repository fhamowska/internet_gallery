{% extends 'base_admin.twig' %}

{% block title %}
    Internetowa Galeria Sztuki - Lista Artyst√≥w
{% endblock %}

{% block content %}
    <h1 class="mb-4 mt-4 pt-5 ml-3 pl-4">Artists List</h1>
    <div class="add-artwork ml-3 mb-3 mr-3">
        <a href="artist_add.php"><button class="btn btn-primary add-artwork-button">Add Artist</button></a>
    </div>
    <div class="container-search ml-3 mr-3">
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
        {% endif %}
        <div class="genres-table">
            <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Year of Birth</th>
                    <th>Year of Death</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for artist in artists %}
                    <tr>
                        <td>{{ artist.id }}</td>
                        <td>{{ artist.first_name }}</td>
                        <td>{{ artist.last_name }}</td>
                        <td>{{ artist.year_of_birth }}</td>
                        <td>{% if artist.year_of_death != 0 %}{{ artist.year_of_death }}{% endif %}</td>
                        <td class="text-center">
                            <a href="artist_edit.php?id={{ artist.id }}" class="btn btn-outline-success btn-md mr-2">Edit</a>
                            <button type="button" class="btn btn-outline-danger btn-md" onclick="confirmDelete({{ artist.id }}, '{{ artist.first_name }} {{ artist.last_name }}')">Delete</button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function confirmDelete(artistId, artistName) {
            if (confirm("Are you sure you want to delete artist '" + artistName + "'?")) {
                window.location.href = "artist_delete.php?id=" + artistId;
            }
        }
    </script>
{% endblock %}
