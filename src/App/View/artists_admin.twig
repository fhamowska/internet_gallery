{% extends 'base_admin.twig' %}

{% block title %}
    Internetowa Galeria Sztuki - Lista Artystów
{% endblock %}

{% block content %}
    <h1 class="mb-4 mt-4 pt-5 ml-3 pl-4">Lista artystów</h1>
    <div class="add-artwork ml-3 mb-3 mr-3">
        <a href="artist_add.php" class="btn btn-primary add-artwork-button">Dodaj artystę</a>
    </div>
    <div class="container-search ml-3 mr-3">
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
        {% endif %}
        <div class="row mb-4">
            <div class="col-12 col-md-5">
                <form class="form-inline d-flex" action="artists_admin.php" method="get">
                    <div class="input-group w-100">
                        <input class="form-control rounded-right" type="search" id="searchTerm" placeholder="Wpisz artystę" name="searchTerm" aria-label="Search" value="{{ searchTerm }}">
                        <button class="btn btn-primary ml-2" type="submit">Szukaj</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="admin-table">
            <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th class="d-none d-md-table-cell">ID</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th class="d-none d-lg-table-cell">Rok urodzenia</th>
                    <th class="d-none d-lg-table-cell">Rok śmierci</th>
                    <th>Akcje</th>
                </tr>
                </thead>
                <tbody>
                {% for artist in artists %}
                    <tr>
                        <td class="d-none d-md-table-cell">{{ artist.id }}</td>
                        <td>{{ artist.first_name }}</td>
                        <td>{{ artist.last_name }}</td>
                        <td class="d-none d-lg-table-cell">{{ artist.year_of_birth }}</td>
                        <td class="d-none d-lg-table-cell">{% if artist.year_of_death != 0 %}{{ artist.year_of_death }}{% endif %}</td>
                        <td class="text-center">
                            <a href="artist_edit.php?id={{ artist.id }}" class="btn btn-outline-success btn-md mr-2">Edytuj</a>
                            <button type="button" class="btn btn-outline-danger btn-md" onclick="confirmDelete({{ artist.id }}, '{{ artist.first_name }} {{ artist.last_name }}')">Usuń</button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
<div class="pagination d-flex justify-content-center">
{% if totalPages > 1 %}
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="artists_admin.php{% if filters.searchTerm %}?searchTerm={{ filters.searchTerm }}{% endif %}?&page={{ currentPage - 1 }}">« Poprzednia</a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">&laquo;&nbsp;Poprzednia</span>
                        </li>
                    {% endif %}

                    {% set startPage = max(1, min(totalPages - 2, currentPage - 1)) %}
                    {% set endPage = min(totalPages, startPage + 2) %}

                    {% for page in range(startPage, endPage) %}
                        <li class="page-item {% if currentPage == page %}active{% endif %}">
                            <a class="page-link pagination-text" href="artists_admin.php{% if filters.searchTerm %}?searchTerm={{ filters.searchTerm }}{% endif %}?&page={{ page }}">{{ page }}</a>
                        </li>
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="artists_admin.php{% if filters.searchTerm %}?searchTerm={{ filters.searchTerm }}{% endif %}?&page={{ currentPage + 1 }}">Następna&nbsp;»</a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">Następna&nbsp;»</span>
                        </li>
                    {% endif %}
                </ul>
            </nav>
    {% endif %}
</div>

    <script>
        function confirmDelete(artistId, artistName) {
            if (confirm("Are you sure you want to delete artist '" + artistName + "'?")) {
                window.location.href = "artist_delete.php?id=" + artistId;
            }
        }
    </script>
{% endblock %}
