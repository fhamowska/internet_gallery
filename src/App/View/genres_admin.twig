{% extends 'base_admin.twig' %}

{% block title %}
    Internetowa Galeria Sztuki - Lista Kategotii
{% endblock %}

{% block content %}
    <h1 class="mb-4 mt-4 pt-5 ml-3 pl-4">Lista kategorii</h1>
    <div class="add-artwork ml-3 mb-3 mr-3">
        <a href="genre_add.php"><button class="btn btn-primary add-artwork-button">Dodaj kategorię</button></a>
    </div>
    <div class="container-search ml-3 mr-3">
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
        {% endif %}
        <div class="admin-table">
            <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th class="d-none d-lg-table-cell">ID</th>
                    <th>Nazwa</th>
                    <th>Akcje</th>
                </tr>
                </thead>
                <tbody>
                {% for genre in genres %}
                    <tr>
                        <td class="d-none d-lg-table-cell">{{ genre.id }}</td>
                        <td>{{ genre.name }}</td>
                        <td class="text-center">
                            <a href="genre_edit.php?id={{ genre.id }}" class="btn btn-outline-success btn-md mr-2">Edytuj</a>
                            <button type="button" class="btn btn-outline-danger btn-md" onclick="confirmDelete({{ genre.id }}, '{{ genre.name }}')">Usuń</button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function confirmDelete(genreId, genreName) {
            if (confirm("Czy na pewno chcesz usunąć kategorię '" + genreName + "'?")) {
                window.location.href = "genre_delete.php?id=" + genreId;
            }
        }
    </script>
{% endblock %}
