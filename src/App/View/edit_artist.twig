{% extends 'admin_base.twig' %}

{% block title %}
    Edit Artist
{% endblock %}

{% block content %}
    <h1>Edit Artist</h1>
    <form action="edit_artist.php" method="post">
        <input type="hidden" name="id" value="{{ artist.id }}">
        <label for="first_name">First Name:</label>
        <input type="text" id="first_name" name="first_name" value="{{ artist.first_name }}"><br><br>
        <label for="last_name">Last Name:</label>
        <input type="text" id="last_name" name="last_name" value="{{ artist.last_name }}"><br><br>
        <label for="year_of_birth">Date of Birth:</label>
        <input type="number" id="year_of_birth" name="year_of_birth" value="{{ artist.year_of_birth }}"><br><br>
        <label for="year_of_death">Date of Death:</label>
        <input type="number" id="year_of_death" name="year_of_death" value="{{ artist.year_of_death }}"><br><br>
        <button type="submit">Save</button>
    </form>
{% endblock %}
